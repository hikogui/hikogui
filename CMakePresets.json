{
  "version": 3,
  "configurePresets": [
    {
      "name": "x64-windows",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_VERBOSE_MAKEFILE": "ON"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "v143,host=x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ]
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-linux",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_VERBOSE_MAKEFILE": "ON"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "linux-gcc-x64"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "msvc-x64-windows",
      "displayName": "MSVC",
      "inherits": "x64-windows",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
	      "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_C_COMPILER": "cl"
      },
      "environment": {
        "CXXFLAGS": "/arch:AVX"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64"
        }
      }
    },
    {
      "name": "msvcanalyze-x64-windows",
      "displayName": "MSVC-analyze",
      "inherits": "x64-windows",
      "generator": "Ninja",
      "cacheVariables": {
	      "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "CXXFLAGS": "/arch:AVX2 /analyze"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64"
        }
      }
    },
    {
      "name": "clang-x64-windows",
      "displayName": "clang",
      "inherits": "x64-windows",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
	      "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang"
      },
      "environment": {
        "CXXFLAGS": "-march=x86-64-v3"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x64"
        }
      }
    },
    {
      "name": "gcc12-x64-linux",
      "displayName": "gcc",
      "inherits": "x64-linux",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++-12"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "targets",
      "hidden": true,
      "targets": [
        "hikogui_gtests",
        "hikogui_htests",
        "checkbox_example",
        "radio_button_example",
        "selection_example",
        "tab_example",
        "text_example",
        "toggle_example",
        "custom_widget_command_example",
        "custom_widget_drawing_example",
        "custom_widget_with_child_example",
        "minimum_custom_widget_example",
        "vulkan_triangle",
        "hikogui_demo"
      ]
    },
    {
      "name": "msvc-x64-windows-ana",
      "displayName": "Default",
      "inherits": "targets",
      "configurePreset": "msvcanalyze-x64-windows"
    },
    {
      "name": "msvc-x64-windows-deb",
      "displayName": "Debug",
      "inherits": "targets",
      "configurePreset": "msvc-x64-windows",
      "configuration": "Debug"
    },
    {
      "name": "msvc-x64-windows-rel",
      "displayName": "Release",
      "inherits": "targets",
      "configurePreset": "msvc-x64-windows",
      "configuration": "Release"
    },
    {
      "name": "msvc-x64-windows-rdi",
      "displayName": "RelWithDebInfo",
      "inherits": "targets",
      "configurePreset": "msvc-x64-windows",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "clang-x64-windows-dbg",
      "displayName": "Debug",
      "inherits": "targets",
      "configurePreset": "clang-x64-windows",
      "configuration": "Debug"
    },
    {
      "name": "clang-x64-windows-rel",
      "displayName": "Release",
      "inherits": "targets",
      "configurePreset": "clang-x64-windows",
      "configuration": "Release"
    },
    {
      "name": "clang-x64-windows-rdi",
      "displayName": "RelWithDebInfo",
      "inherits": "targets",
      "configurePreset": "clang-x64-windows",
      "configuration": "RelWithDebInfo"
    }
  ]
}