{
    "name": "Pink and White",
    "mode": "light",

    // Distance between widgets and between widgets and the border of the container.
    "margin": 5,

    // The line-width of a border.
    "border-width": 2,

    // The rounding radius of boxes with rounded corners.
    "rounding-radius": 6,

    // The size of small square widgets.
    "size": 11,

    // The size of large widgets. Such as the minimum scroll bar size.
    "large-size": 19,

    // Size of icons inside a widget.
    "icon-size": 7,

    // Size of icons representing the length of am average word of a label's text.
    "large-icon-size": 23,

    // Size of icons being inline with a label's text.
    "label-icon-size": 15,

    // The colors values are either:
    // - integers are in sRGB
    // - floats are in linear-extended-sRGB
    // - string name of an color in the theme.

    // Bright colors, fitting theme.
    "blue"       : [  0, 122, 255],
    "green"      : [ 52, 199,  89],
    "indigo"     : [ 88,  86, 214],
    "orange"     : [255, 149,   0],
    "pink"       : [255,  45,  85],
    "purple"     : [175,  82, 222],
    "red"        : [255,  59,  48],
    "teal"       : [ 90, 200, 250],
    "yellow"     : [255, 204,   0],

    "gray"       : [142, 142, 147],
    "gray2"      : [174, 174, 178],
    "gray3"      : [199, 199, 204],
    "gray4"      : [209, 209, 214],
    "gray5"      : [229, 229, 234],
    "gray6"      : [242, 242, 247],

    // Colors used by widgets, to show nesting inside containers,
    // and for internal elements and disabled icons.
    "fill-color": [
        [255, 241, 245],
        [254, 218, 228],
        [252, 190, 208],
        [252, 173, 197]
    ],

    // Colors used by widgets for internal elements and disabled icons.
    "border-color": [
        [252, 173, 197],
        [251, 140, 173],
        [249,  96, 141],
        [247,  40, 102]
    ],

    // Color for textual or primary elements like icons.
    "foreground-color":       [62, 2, 20],

    // Accent color used by widgets, to show icons, hover and keyboard focus
    "accent-color":           [169,  24,  28],
    "text-select-color":      [156, 143, 209],
    "primary-cursor-color":   [ 62,   2,  20],
    "secondary-cursor-color": [154, 109,   5],

    "small-label-style": {
        "family": "Corbel",
        "weight": "regular",
        "size": 10,
        "color": "foreground"
    },

    "label-style": {
        "family": "Corbel",
        "weight": "regular",
        "size": 12,
        "color": "foreground"
    },
    "warning-label-style": {
        "family": "Corbel",
        "weight": "regular",
        "size": 12,
        "color": "foreground"
    },
    "error-label-style": {
        "family": "Corbel",
        "weight": "regular",
        "size": 12,
        "color": "red"
    },
    "help-label-style": {
        "family": "Corbel",
        "weight": "regular",
        "size": 12,
        "color": [88, 86, 214]
    },
    "placeholder-label-style": {
        "family": "Corbel",
        "weight": "regular",
        "size": 12,
        "color": [142, 142, 147]
    },
    "link-label-style": {
        "family": "Corbel",
        "weight": "regular",
        "size": 12,
        "color": [0, 122, 255]
    }
}
