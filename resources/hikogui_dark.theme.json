{
    "name": "default",
    "mode": "dark",

    // Distance between widgets and between widgets and the border of the container.
    "margin": 5,

    // The line-width of a border.
    "border-width": 1,

    // The rounding radius of boxes with rounded corners.
    "rounding-radius": 4,

    // The size of small square widgets.
    "size": 11,

    // The size of large widgets. Such as the minimum scroll bar size.
    "large-size": 19,

    // Size of icons inside a widget.
    "icon-size": 8,

    // Size of icons representing the length of am average word of a label's text.
    "large-icon-size": 25,

    // Size of icons being inline with a label's text.
    "label-icon-size": 15,

    "font-size": 10,

    // The colors values are either:
    // - integers are in sRGB
    // - floats are in linear-extended-sRGB
    // - string name of an color in the theme.

    // Bright colors, fitting theme.
    "blue"       : [ 10, 132, 255],
    "green"      : [ 48, 209,  88],
    "indigo"     : [ 94,  92, 230],
    "orange"     : [255, 159,  10],
    "pink"       : [255,  55,  95],
    "purple"     : [191,  90, 242],
    "red"        : [255,  69,  58],
    "teal"       : [100, 210, 255],
    "yellow"     : [255, 214,  10],

    "gray0"      : [28, 28, 30],
    "gray1"      : [44, 44, 46],
    "gray2"      : [28, 28, 30],
    "gray3"      : [58, 58, 60],
    "gray4"      : [99, 99, 102],
    "gray5"      : [142, 142, 147],
    "gray6"      : [174, 174, 178],
    "gray7"      : [199, 199, 204],
    "gray8"      : [209, 209, 214],
    "gray9"      : [229, 229, 234],
    "gray10"     : [242, 242, 247],

    // Colors used by widgets, to show nesting inside containers,
    "fill-color": [
        [ 28,  28,  30],
        [ 44,  44,  46],
        [ 58,  58,  60],
        [ 72,  72,  74]
    ],
    
    "color":                  [209, 209, 214],
    "disabled-color":         [142, 142, 147],
    "accent-color":           [ 10, 132, 255],
    "text-select-color":      [ 10, 132, 255],
    "primary-cursor-color":   [242, 242, 247],
    "secondary-cursor-color": [255, 214,  10],

    "small-label-style": {
        "family": "Arial",
        "weight": "regular",
        "scale": 1,
        "color": [242, 242, 247]
    },

    "label-style": {
        "family": "Arial",
        "weight": "regular",
        "scale": 1,
        "color": [242, 242, 247]
    },
    "warning-label-style": {
        "family": "Times New Roman",
        "weight": "regular",
        "scale": 1,
        "color": [242, 242, 247]
    },
    "error-label-style": {
        "family": "Arial",
        "weight": "regular",
        "scale": 1,
        "color": [255, 159,  10]
    },
    "help-label-style": {
        "family": "Arial",
        "weight": "regular",
        "scale": 1,
        "color": [88, 86, 214]
    },
    "placeholder-label-style": {
        "family": "Arial",
        "weight": "regular",
        "scale": 1,
        "color": [142, 142, 147]
    },
    "link-label-style": {
        "family": "Arial",
        "weight": "regular",
        "scale": 1,
        "color": [0, 122, 255]
    }
}
