{"bindings": [
    // General GUI
    {"key": "space",            "command": "gui_sysmenu_open"},
    {"key": "space",            "command": "gui_activate"},
    {"key": "enter",            "command": "gui_enter"},
    {"key": "enter",            "command": "gui_activate"},
    {"key": "escape",           "command": "gui_cancel"},
    {"key": "tab",              "command": "gui_widget_next"},
    {"key": "shift+tab",        "command": "gui_widget_prev"},
    {"key": "menu",             "command": "gui_toolbar_open"},
    {"key": "left",             "command": "gui_toolbar_prev"},
    {"key": "right",            "command": "gui_toolbar_next"},
    {"key": "up",               "command": "gui_menu_prev"},
    {"key": "down",             "command": "gui_menu_next"},

    // General text editing
    {"key": "ctrl+x",           "command": "text_edit_cut"},
    {"key": "shift+delete",     "command": "text_edit_cut"},
    {"key": "ctrl+c",           "command": "text_edit_copy"},
    {"key": "ctrl+insert",      "command": "text_edit_copy"},
    {"key": "ctrl+v",           "command": "text_edit_paste"},
    {"key": "shift+insert",     "command": "text_edit_paste"},
    {"key": "ctrl+z",           "command": "text_undo"},
    {"key": "alt+backspace",    "command": "text_undo"},
    {"key": "ctrl+y",           "command": "text_redo"},
    {"key": "ctrl+shift+z",     "command": "text_redo"},

    // Text navigation
    {"key": "left",             "command": "text_cursor_left_char"},
    {"key": "right",            "command": "text_cursor_right_char"},
    {"key": "down",             "command": "text_cursor_down_char"},
    {"key": "up",               "command": "text_cursor_up_char"},
    //{"key": "pageup",           "command": "text_cursor_page_up"},
    //{"key": "pagedown",         "command": "text_cursor_page_down"},
    {"key": "home",             "command": "text_cursor_begin_line"},
    {"key": "end",              "command": "text_cursor_end_line"},
    {"key": "ctrl+left",        "command": "text_cursor_left_word"},
    {"key": "ctrl+right",       "command": "text_cursor_right_word"},
    {"key": "ctrl+up",          "command": "text_cursor_begin_sentence"},
    {"key": "ctrl+down",        "command": "text_cursor_end_sentence"},
    {"key": "ctrl+home",        "command": "text_cursor_begin_document"},
    {"key": "ctrl+end",         "command": "text_cursor_end_document"},
    //{"key": "ctrl+]",           "command": "text_cursor_bracket_match"},

    // Text manipulation
    {"key": "enter",            "command": "text_insert_line"},
    {"key": "ctrl+enter",       "command": "text_insert_line_down"},
    {"key": "ctrl+shift+enter", "command": "text_insert_line_up"},
    {"key": "delete",           "command": "text_delete_char_next"},
    {"key": "ctrl+delete",      "command": "text_delete_word_next"},
    {"key": "insert",           "command": "text_mode_insert"},
    //{"key": "tab",              "command": "text_insert_tab"},
    {"key": "backspace",        "command": "text_delete_char_prev"},
    {"key": "ctrl+backspace",   "command": "text_delete_word_prev"},
    {"key": "ctrl+t",           "command": "text_swap_chars"},
    //{"key": "ctrl+u",           "command": "text_case_lower"},
    //{"key": "ctrl+shift+u",     "command": "text_case_upper"},

    // Text selection
    {"key": "shift+left",       "command": "text_select_left_char"},
    {"key": "shift+right",      "command": "text_select_right_char"},
    {"key": "shift+up",         "command": "text_select_up_char"},
    {"key": "shift+down",       "command": "text_select_down_char"},
    {"key": "shift+ctrl+left",  "command": "text_select_left_word"},
    {"key": "shift+ctrl+right", "command": "text_select_right_word"},
    {"key": "shift+home",       "command": "text_select_begin_line"},
    {"key": "shift+end",        "command": "text_select_end_line"},
    {"key": "shift+ctrl+up",    "command": "text_select_begin_sentence"},
    {"key": "shift+ctrl+down",  "command": "text_select_end_sentence"},
    {"key": "shift+ctrl+home",  "command": "text_select_begin_document"},
    {"key": "shift+ctrl+end",   "command": "text_select_end_document"},
    //{"key": "shift+ctrl+]",     "command": "text_select_bracket_match"},
    //{"key": "shift+pageup",     "command": "text_select_page_up"},
    //{"key": "shift+pagedown",   "command": "text_select_page_down"},
    {"key": "ctrl+a",           "command": "text_select_document"}
]}
